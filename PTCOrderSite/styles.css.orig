/* Text Styles
 * ----------- */

a, a:visited {
  color: #2dbfff;
}
a:hover, a:active {
  color: #2dbfff;
}

h1
{
    border-bottom: 2px solid black;
    padding: 50px 20px 0px 20px;
}

h3 {
  color: #003082;
}
h4 {
  color: #000000;
}
h5 {
  color: #F9B600;
  text-shadow: 1px 1px 0 #555555;
  text-transform: uppercase;
}
h6 {
  color: #000000;
}

